#!/bin/sh

init () {
  make clean
  make
  ./fuse-example -d -s -f mnt &
}

remove () {
  fusermount -u mnt
  rm -v pmem_cache
}

run () {
  make clean
  make
  ./fuse-example -f -s mnt &
}

case "$1" in
  ex)
     run
     ;;
  clean)
     remove
     ;;
  *)
     remove
     init
     ;;
esac
exit 0
